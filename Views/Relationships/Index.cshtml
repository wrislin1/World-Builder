@model IEnumerable<WorldBuilder.Models.Relationship>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Character1ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character2ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Details)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RelationshipType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Character1ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Character2ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Details)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RelationshipType.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RelationshipID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RelationshipID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RelationshipID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
