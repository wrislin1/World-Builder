@model IEnumerable<WorldBuilder.Models.World>

@{
    ViewData["Title"] = "Worlds";
}

<h1>Worlds</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="World" asp-route-id="@item.WorldID">@Html.DisplayFor(modelItem => item.Name)</a>
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.WorldID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
